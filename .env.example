# ---- SkyMaintain Frontend Environment ----
# Copy this file to .env.local and fill in real values.

# ---- Backend Connection ----
NEXT_PUBLIC_API_BASE_URL=http://127.0.0.1:8000
NEXT_PUBLIC_DATA_MODE=live        # mock | live | hybrid
NEXT_PUBLIC_ALLOW_MOCK_FALLBACK=false  # Only applies in hybrid/mock; ignored in strict live mode

# ---- Stripe Billing ----
STRIPE_SECRET_KEY=sk_test_...               # Same key as backend (server-side only)
STRIPE_WEBHOOK_SECRET=whsec_...             # Frontend webhook signing secret (if using frontend webhook)

# Price IDs â€” names differ from backend env vars
STRIPE_PRICE_STARTER_MONTHLY=price_...
STRIPE_PRICE_STARTER_YEARLY=price_...
STRIPE_PRICE_PROFESSIONAL_MONTHLY=price_...
STRIPE_PRICE_PROFESSIONAL_YEARLY=price_...
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_...
STRIPE_PRICE_ENTERPRISE_YEARLY=price_...

NEXT_PUBLIC_SITE_URL=http://localhost:3000   # Used for checkout success/cancel redirects

# ---- Auth ----
TWO_FA_SECRET=change-me-to-at-least-32-characters-long-string

# ---- Demo Video Upload Persistence ----
# Supabase public bucket used by Super Admin demo video uploads
SKYMAINTAIN_DEMO_VIDEO_BUCKET=demo-media
# Storage backend: supabase | s3 | local
SKYMAINTAIN_DEMO_VIDEO_PROVIDER=supabase
# Maximum upload size (MB) for server validation
SKYMAINTAIN_DEMO_VIDEO_MAX_MB=50
# Optional: mirror max upload size into UI hint/client-side validation
NEXT_PUBLIC_DEMO_VIDEO_MAX_MB=50

# ---- S3-Compatible Demo Video Storage (optional, bypasses Supabase file cap) ----
# Works with AWS S3, Cloudflare R2, and most S3-compatible object stores.
# Enable by setting SKYMAINTAIN_DEMO_VIDEO_PROVIDER=s3 and these credentials.
# SKYMAINTAIN_DEMO_VIDEO_S3_BUCKET=demo-media
# SKYMAINTAIN_DEMO_VIDEO_S3_REGION=auto
# SKYMAINTAIN_DEMO_VIDEO_S3_ENDPOINT=https://<accountid>.r2.cloudflarestorage.com
# SKYMAINTAIN_DEMO_VIDEO_S3_ACCESS_KEY_ID=
# SKYMAINTAIN_DEMO_VIDEO_S3_SECRET_ACCESS_KEY=
# Optional: set when using public bucket/object URL delivery instead of signed URLs
# SKYMAINTAIN_DEMO_VIDEO_S3_PUBLIC_BASE_URL=https://cdn.example.com
# Optional: force path-style URLs for compatible providers
# SKYMAINTAIN_DEMO_VIDEO_S3_FORCE_PATH_STYLE=false
# Optional: signed playback URL TTL in seconds
# SKYMAINTAIN_DEMO_VIDEO_S3_SIGNED_URL_TTL_SECONDS=3600

